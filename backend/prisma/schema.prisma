generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  dob       String
  course    String
  address   String
  message   String
  enrollDate  String @default("")

  totalFee    Float    @default(0)
  amountPaid  Float    @default(0)
  amountDue   Float    @default(0)
  paymentStatus String @default("unpaid")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("students")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
}
